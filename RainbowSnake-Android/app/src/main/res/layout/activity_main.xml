<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gusclass.rainbowsnake.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:id="@+id/textView" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SendGps"
        android:id="@+id/latlong"
        android:layout_marginTop="78dp"
        android:checked="false"
        android:layout_below="@+id/toggleOffButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Send Lat/Long"
        android:id="@+id/sendlatlonglabel"
        android:layout_alignBaseline="@+id/latlong"
        android:layout_alignBottom="@+id/latlong"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Power Off"
        android:id="@+id/powerOffLabel"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="toggleOff"
        android:id="@+id/toggleOffButton"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/latlong"
        android:layout_alignStart="@+id/latlong"
        android:checked="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Store Position"
        android:id="@+id/storePosTextView"
        android:layout_below="@+id/toggleOffButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/savePositionButton"
        android:layout_alignBaseline="@+id/storePosTextView"
        android:layout_alignBottom="@+id/storePosTextView"
        android:layout_alignLeft="@+id/toggleOffButton"
        android:layout_alignStart="@+id/toggleOffButton" />
</RelativeLayout>
